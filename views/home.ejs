<div id="home">
    <div class="new-post">
        <div class="profile-img"><p>img</p></div>
        <div>
            <form action="/home/newPost" method="POST" enctype="multipart/form-data">
                <textarea name="newPost" class="text" cols="80" rows="10" placeholder="What is happening"></textarea>
                <input type="file" name="postImage"> 
                <div class="btn-box">
                    <button class="post-add-btn img">img</button>
                    <button class="post-add-btn">gif</button>
                    <button class="post-add-btn">poll</button>
                    <button class="post-add-btn">emoticon</button>
                    <button type="submit" class="post-btn">Post</button>
                </div>
            </form>
        </div>
    </div>
    <div id="post-box"></div>
    <button id="loadPostsBtn">More posts</button>
</div>
<script src="javascript/newPostScript.js" defer></script>